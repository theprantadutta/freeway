# Application Port
PORT=8080

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_NAME=freeway

# Or use a full connection string (takes precedence over individual values)
# DATABASE_URL=Host=localhost;Port=5432;Database=freeway;Username=postgres;Password=your-password

# API Keys
ADMIN_API_KEY=your-admin-api-key
OPENROUTER_API_KEY=sk-or-your-openrouter-key

# AI Provider API Keys (for multi-provider fallback)
OPENAI_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key
GROQ_API_KEY=your-groq-api-key
COHERE_API_KEY=your-cohere-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key
MISTRAL_API_KEY=your-mistral-api-key

# Application Settings
API_KEY_PREFIX=fw_
REQUEST_TIMEOUT_SECONDS=30
COMPLETION_TIMEOUT_SECONDS=120

# JWT Authentication (for web frontend)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_EXPIRY_HOURS=24

# Hangfire Dashboard (optional)
HANGFIRE_USERNAME=admin
HANGFIRE_PASSWORD=your-hangfire-password

# CORS (comma-separated origins, or * for all)
ALLOWED_ORIGINS=*

# Environment
ASPNETCORE_ENVIRONMENT=Development
